.header
  display grid
  grid-template-columns 30% auto 10%
  height 90px
  align-content: center
  font-weight bold
  a:visited
    color dark-grey
  a:hover
    color purple
  &__nav-menu
    font-size: size1
    display flex
    flex-direction row
    justify-content: space-between
    border-bottom solid 2.5px light-pink
    height 40px
  &__login
    grid-column 3
    font-size: size2
    color grey
    a:visited
      color grey
    a:hover
      color purple
